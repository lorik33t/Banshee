{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Banshee",
  "version": "0.1.0",
  "identifier": "com.banshee.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run build:handlers && vite",
    "beforeBuildCommand": "npm run build:handlers && vite build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Banshee",
        "width": 1280,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "visible": true,
        "decorations": true,
        "transparent": false,
        "center": true,
        "alwaysOnTop": false,
        "skipTaskbar": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {},
  "bundle": {
    "active": true,
    "targets": ["dmg"],
    "icon": [
      "icons/icon.icns"
    ],
    "resources": [
      "model_handlers/claude.js",
      "model_handlers/gemini.js"
    ]
  }
}
